{
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background/index.js"]
  },
  "page_action": {
    "default_title": "Webpack chrome extension popup action",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "background",
    "tabs"
  ]
}
